{% extends 'base.html.twig' %}

{% block title %}Contacto{% endblock %}

{% block home_banner %}{% endblock %}
{% block features %}{% endblock %}
{% block video %}{% endblock %}

{% block service %}
    <section class="contact_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row section_bottom">
                        <h3 class="text-heading title_color">Contacto</h3>
                        <p class="sample-text">
                            Si tiene alguna duda acerca de los servicios que ofrecemos o desea realizar cualquier consulta, puede contactar con nosotros rellenando el formulario de contacto. <br />
                            Nos pondremos en contacto con usted lo antes posible.
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    {{ form_errors(form.captcha) }}
                    <form class="row contact_form" action="{{ path('contact') }}" method="post" id="contactForm">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{
                                    form_widget(form.name, {'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Introduzca su nombre',
                                        'onfocus': 'this.placeholder = ""',
                                        'onblur': 'this.placeholder = "Introduzca su nombre"',
                                    }})
                                }}
                                {{ form_errors(form.name) }}
                            </div>
                            <div class="form-group">
                                {{
                                form_widget(form.email, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Introduzca su email',
                                    'onfocus': 'this.placeholder = ""',
                                    'onblur': 'this.placeholder = "Introduzca su email"',
                                }})
                                }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="form-group">
                                {{
                                form_widget(form.phone, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Introduzca su teléfono',
                                    'onfocus': 'this.placeholder = ""',
                                    'onblur': 'this.placeholder = "Introduzca su teléfono"',
                                }})
                                }}
                                {{ form_errors(form.phone) }}
                            </div>
                            <div class="form-group">
                                {{
                                form_widget(form.subject, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Introduzca el motivo de su contacto',
                                    'onfocus': 'this.placeholder = ""',
                                    'onblur': 'this.placeholder = "Introduzca el motivo de su contacto"',
                                }})
                                }}
                                {{ form_errors(form.subject) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{
                                form_widget(form.message, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Introduzca el mensaje',
                                    'onfocus': 'this.placeholder = ""',
                                    'onblur': 'this.placeholder = "Introduzca el mensaje"',
                                }})
                                }}
                                {{ form_errors(form.message) }}
                            </div>
                        </div>
                        {{ form_widget(form.captcha) }}
                        <div class="col-md-12 text-right">
                            {{
                            form_row(form.send, {
                                'label': 'Enviar mensaje',
                                'attr': {
                                    'class': 'primary-btn text-uppercase'
                                }
                            })
                            }}
                        </div>
                        {{ form_row(form._token) }}
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block team %}{% endblock %}
{% block cta %}{% endblock %}
{% block blog %}{% endblock %}

{% block javascripts %}{% endblock %}
